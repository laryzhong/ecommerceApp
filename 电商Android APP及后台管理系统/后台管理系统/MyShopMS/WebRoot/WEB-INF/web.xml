<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<description>登录组件</description>
  	<servlet-name>login</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.LoginServlet</servlet-class>  	
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>注册组件</description>
  	<servlet-name>regist</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.RegistServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>regist</servlet-name>
  	<url-pattern>/regist</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>显示商品组件</description>
  	<servlet-name>showGoods</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.ShowGoodsServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>showGoods</servlet-name>
  	<url-pattern>/goods</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>显示用户购物车商品</description>
  	<servlet-name>showFromUserCart</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.ShowCartServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>showFromUserCart</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>从购物车中移除</description>
  	<servlet-name>removeFromCart</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.ModifyCartServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>removeFromCart</servlet-name>
  	<url-pattern>/modify</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>查看订单</description>
  	<servlet-name>showOrder</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.MyOrdersServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>showOrder</servlet-name>
  	<url-pattern>/showOrder</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>查找商品</description>
  	<servlet-name>searchGoods</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.SearchServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>searchGoods</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>商品上架</description>
  	<servlet-name>newStock</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.NewStockServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>newStock</servlet-name>
  	<url-pattern>/newStock</url-pattern>
  </servlet-mapping>
 
  <servlet>
  	<description>商品轮播图及详情参数图上传</description>
  	<servlet-name>NewStockUploadImagesServlet</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.NewStockUploadImagesServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>NewStockUploadImagesServlet</servlet-name>
  	<url-pattern>/NewStockUploadImages</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>商品下架</description>
  	<servlet-name>DelGoods</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.DelGoodsServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>DelGoods</servlet-name>
  	<url-pattern>/DelGoods</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>订单统计</description>
  	<servlet-name>orderStatistical</servlet-name>
  	<servlet-class>cn.jbit.myshopms.servlet.OrderStatisticalServlet</servlet-class>
  	<init-param>
  		<param-name></param-name>
		<param-value></param-value>  	
	</init-param>
  </servlet>  
  <servlet-mapping>
  	<servlet-name>orderStatistical</servlet-name>
  	<url-pattern>/orderStatistical</url-pattern>
  </servlet-mapping>
</web-app>
